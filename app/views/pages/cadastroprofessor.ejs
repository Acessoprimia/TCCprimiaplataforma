<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cadastro Professor</title>
  <%- include('../partials/hdeslogado.ejs') %>
  <link rel="stylesheet" href="/css/cadastroprofessor.css">
</head>
<body>

  <!-- SEÇÃO ROXA COM ARREDONDAMENTO EMBAIXO -->
  <header class="secao-roxa"></header>

  <!-- ARTIGO COM FORMULÁRIO DE CADASTRO -->
  <article class="card-cadastro">
    <form id="cadastroProfessorForm" class="form-cadastro" action="/entradaprofessor" method="POST" novalidate>
      
      <!-- NOME COMPLETO -->
      <fieldset class="campo-wrapper">
        <legend class="sr-only">Nome completo</legend>
        <span class="icone-campo">
          <img src="../image/usuario.png" alt="" class="icone" aria-hidden="true">
        </span>
        <input type="text" id="nomeCompleto" name="nomeCompleto" class="input-campo" placeholder="Nome completo" required aria-label="Nome completo">
      </fieldset>
      <small id="erro-nome" class="erro-msg" role="alert"></small>

      <!-- EMAIL -->
      <fieldset class="campo-wrapper">
        <legend class="sr-only">Email</legend>
        <span class="icone-campo">
          <img src="../image/usuario.png" alt="" class="icone" aria-hidden="true">
        </span>
        <input type="email" id="email" name="email" class="input-campo" placeholder="Email" required aria-label="Email">
      </fieldset>

      <!-- SENHA -->
      <fieldset class="campo-wrapper">
        <legend class="sr-only">Senha</legend>
        <span class="icone-campo">
          <img src="../image/cadeado.png" alt="" class="icone" aria-hidden="true">
        </span>
        <input type="password" id="senha" name="senha" class="input-campo" placeholder="Senha" required aria-label="Senha" aria-describedby="regras-senha">
        <button type="button" class="btn-olhinho" id="btn-olhinho-senha" onclick="toggleSenha('senha')" aria-label="Mostrar ou ocultar senha">
          <img src="../image/olho_aberto.png" alt="Mostrar Senha" class="olhinho-icon" aria-hidden="true">
        </button>
      </fieldset>

      <!-- REQUISITOS DE SENHA -->
      <ul class="regras-senha-modern" id="regras-senha">
        <li id="tamanho">Entre 8 e 15 caracteres</li>
        <li id="maiuscula">Uma letra maiúscula</li>
        <li id="minuscula">Uma letra minúscula</li>
        <li id="numero">Um número</li>
        <li id="especial">Um caractere especial (@, !, #, $, %, &)</li>
      </ul>

      <!-- CONFIRMAR SENHA -->
      <fieldset class="campo-wrapper">
        <legend class="sr-only">Repetir senha</legend>
        <span class="icone-campo">
          <img src="../image/cadeado.png" alt="" class="icone" aria-hidden="true">
        </span>
        <input type="password" id="confirmarSenha" name="confirmarSenha" class="input-campo" placeholder="Repetir a senha" required aria-label="Repetir a senha">
        <button type="button" class="btn-olhinho" id="btn-olhinho-confirmar" onclick="toggleSenha('confirmarSenha')" aria-label="Mostrar ou ocultar senha">
          <img src="../image/olho_aberto.png" alt="Mostrar Senha" class="olhinho-icon" aria-hidden="true">
        </button>
      </fieldset>
      <small id="erro-confirmar" class="erro-msg" role="alert"></small>

      <!-- DATA DE NASCIMENTO -->
      <fieldset class="campo-wrapper">
        <legend class="sr-only">Data de nascimento</legend>
        <span class="icone-campo">
          <img src="../image/usuario.png" alt="" class="icone" aria-hidden="true">
        </span>
        <input type="date" id="dataNascimento" name="dataNascimento" class="input-campo" required aria-label="Data de nascimento">
      </fieldset>
      <small id="erro-data" class="erro-msg" role="alert"></small>

      <!-- UPLOAD DIPLOMA -->
      <fieldset class="campo-wrapper campo-diploma">
        <legend class="sr-only">Diploma</legend>
        <span class="icone-campo">
          <img src="../image/diploma.png" alt="" class="icone" aria-hidden="true">
        </span>
        <span class="nome-arquivo">Selecione um arquivo</span>
        <input type="file" id="diploma" name="diploma" class="input-arquivo" accept=".pdf,.jpg,.png" required aria-label="Enviar diploma">
      </fieldset>

      <!-- MATÉRIA -->
      <fieldset class="campo-wrapper">
        <legend class="sr-only">Matéria que leciona</legend>
        <span class="icone-campo">
          <img src="../image/materiacd.png" alt="" class="icone" aria-hidden="true">
        </span>
        <select id="materia" name="materia" class="input-campo select-campo" required aria-label="Matéria que leciona">
          <option value="">Matéria que leciona</option>
          <option>Português</option>
          <option>Matemática</option>
          <option>História</option>
          <option>Geografia</option>
          <option>Biologia</option>
          <option>Física</option>
          <option>Química</option>
          <option>Inglês</option>
          <option>Educação Física</option>
          <option>Filosofia</option>
          <option>Sociologia</option>
          <option>Artes</option>
        </select>
      </fieldset>

      <!-- BOTÃO SUBMIT -->
      <button type="submit" class="botao-submit">Cadastre-se</button>
    </form>
  </article>

  <script src="../js/cadastroprofessor.js"></script>
</body>
</html>

