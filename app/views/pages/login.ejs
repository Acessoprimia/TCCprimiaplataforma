<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="../css/login.css" rel="stylesheet">
    <%- include("../partials/hdeslogado.ejs") %>
    <title>Login - Primia</title>
</head>
<body>
    <!-- SEÇÃO ROXA DE FUNDO -->
    <section class="secao-roxa">
        <!-- LOGO CENTRALIZADA -->
        <figure class="logo-wrapper">
            
        </figure>

        <!-- CARD DE LOGIN -->
        <article class="card-login">
            <form class="form-login" action="/login" method="POST">
                <!-- CAMPO EMAIL -->
                <label class="campo-wrapper">
                    <figure class="icone-campo">
                        <img src="../image/usuario.png" alt="Usuário" class="icone">
                    </figure>
                    <input type="email" name="email" placeholder="Email" class="input-campo" required>
                </label>

                <!-- CAMPO SENHA -->
                <label class="campo-wrapper">
                    <figure class="icone-campo">
                        <img src="../image/cadeado.png" alt="Senha" class="icone">
                    </figure>
                    <input type="password" name="senha" placeholder="Senha" class="input-campo" required>
                </label>

                <!-- LINK ESQUECEU A SENHA -->
                <footer class="rodape-form">
                    <a href="/recuperar-senha" class="link-recuperar">Esqueceu a senha?</a>
                </footer>

                <!-- BOTÃO LOGIN -->
                <button type="" class="botao-login">Login</button>

                <!-- DIVISOR OU -->
                <section class="divisor">
                    <span class="linha-divisor"></span>
                    <span class="texto-divisor">Ou</span>
                    <span class="linha-divisor"></span>
                </section>

                <!-- REDES SOCIAIS -->
                <nav class="redes-sociais">
                    <a href="/login/facebook" class="btn-social" aria-label="Login com Facebook">
                        <img src="../image/facebook.png" alt="Facebook" class="icone-social">
                    </a>
                    <a href="/login/google" class="btn-social" aria-label="Login com Google">
                        <img src="../image/google.png" alt="Google" class="icone-social">
                    </a>
                    <a href="/login/github" class="btn-social" aria-label="Login com GitHub">
                        <img src="../image/github.png" alt="GitHub" class="icone-social">
                    </a>
                </nav>
            </form>
        </article>
    </section>

</body>

</html>